{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "public/build/*"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"strict": false,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@app/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@includes/*": ["./src/includes/*"],
			"@styles/*": ["./src/styles/*"],
			"@routes/*": ["./src/routes/*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}
